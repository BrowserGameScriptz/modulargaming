<h3>{{topic.title}}</h3>

{{#posts}}
	<div id="post{{id}}" class="media">
		<div class="pull-left">
			<a href="#">
				<img class="media-object" src="{{base_url}}assets/img/avatar.png">
			</a><br>
			Post count: {{user.post_count}}
		</div>
		<div class="media-body">
			<h5 class="media-heading"><a href="#post{{id}}"><small>#{{i}}</small></a> Posted by <a href="{{user.href}}">{{user.username}}</a></h5>
				<p>{{{content}}}</p>

				{{#user.signature}}
					<div class="signature">
						<p>{{user.signature}}</p>
					</div>
				{{/user.signature}}

				<small>{{created}}</small>
			{{#can_edit}}
				<a href="{{links.edit}}" class="btn btn-small">edit</a>
			{{/can_edit}}
			{{#can_delete}}
				<a href="{{links.delete}}" class="btn btn-small">delete</a>
			{{/can_delete}}
		</div>
	</div>
	<hr>
{{/posts}}

<div class="form-actions">
	<a href="{{links.reply}}" class="btn">Reply</a>

	{{#has_actions}}
	<div class="btn-group">
		<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			<i class="icon-wrench"></i>
			Action
			<span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
			{{#actions}}
				<li><a href="{{href}}">{{title}}</a></li>
			{{/actions}}
			<!-- dropdown menu links -->
		</ul>
	</div>
	{{/has_actions}}
</div>
