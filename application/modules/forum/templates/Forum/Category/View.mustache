<h3>{{category.title}}</h3>

<table class="table table-striped">

	<thead>
		<tr>
			<th>Subject</th>
			<th>Posted by</th>
			<th>Last post</th>
			<th>Created</th>
		</tr>
	</thead>

	<tbody>
		{{#topics}}
			<tr>
				<td>
				{{#sticky}}<i class="icon-bullhorn"></i> {{/sticky}}
				{{#locked}}<i class="icon-lock"></i> {{/locked}}
				<a href="{{href}}">{{title}}</a></td>
				<td><a href="{{user.href}}">{{user.username}}</a></td>
				<td><a href="{{last_post.user.href}}">{{last_post.user.username}}</a> - {{last_post.created}}</td>
				<td>{{created}}</td>
			</tr>
		{{/topics}}
	</tbody>
</table>

{{^topics}}
	<div class="alert alert-error">No forum topics</div>
{{/topics}}

{{#category.locked}}
	<div class="alert alert-warning">Category is locked</div>
{{/category.locked}}

{{#can_create}}
	<div class="form-actions">
		<a href="{{links.create}}" class="btn">New thread</a>
	</div>
{{/can_create}}
