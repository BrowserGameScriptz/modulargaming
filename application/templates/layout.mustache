<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset=utf-8>
	<title>{{title}} - Modular Gaming</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="{{base_url}}assets/css/bootstrap.css">
    <link rel="stylesheet" href="{{base_url}}assets/css/bootstrap-responsive.css">
    <link rel="stylesheet" href="{{base_url}}assets/css/bootstrap-wysihtml5.css">
    <link rel="stylesheet" href="{{base_url}}assets/css/style.css">
</head>
<body>

	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<a class="brand" href="{{base_url}}">Modular Gaming</a>
				<div class="nav-collapse collapse">
					<ul class="nav">
						<li><a href="{{base_url}}">Home</a></li>
						{{#logged_in}}
							<li><a href="{{base_url}}pets/">Pets</a></li>
							<li><a href="{{base_url}}messages/">Messages</a></li>
							<li><a href="{{base_url}}forum/">Forum</a></li>
						{{/logged_in}}
					</ul>

					<ul class="nav pull-right">
                        <form class="navbar-search" action="{{base_url}}search/" method="get">
                            <input type="text" name="query" class="search-query" placeholder="Search">
                        </form>
						{{#logged_in}}
							<li class="dropdown">
								<a class="dropdown-toggle" data-toggle="dropdown" href="#">
									{{user.username}}
									<b class="caret"></b>
								</a>
								<ul class="dropdown-menu">
									<li><a href="{{base_url}}user/">Profile</a></li>
									<li><a href="{{base_url}}user/edit/">Settings</a></li>
									<li class="divider"></li>
									<li><a href="{{base_url}}user/logout/">Logout</a></li>
								</ul>
							</li>
						{{/logged_in}}
						{{^logged_in}}
							<li><a href="{{base_url}}user/login/">Login</a></li>
							<li><a href="{{base_url}}user/register/">Register</a></li>
						{{/logged_in}}
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</div>
	</div>

	<div class="container">
		{{#has_breadcrumb}}
			<ul class="breadcrumb">
				{{#breadcrumb}}
					{{#active}}
						<li class="active">
							{{title}}
							{{#divider}}<span class="divider">/</span>{{/divider}}
						</li>
					{{/active}}
					{{^active}}
						<li>
							<a href="{{href}}">{{title}}</a>
							{{#divider}}<span class="divider">/</span>{{/divider}}
						</li>
					{{/active}}
				{{/breadcrumb}}
			</ul>
		{{/has_breadcrumb}}

		{{>hints}}
		
		{{>content}}
	
		<hr>

		<footer>
			<p>&copy; Modular Gaming 2013</p>
		</footer>
	</div>
	
	<script src="{{base_url}}assets/js/wysihtml5.js"></script>
	<script src="{{base_url}}assets/js/jquery.js"></script>
	<script src="{{base_url}}assets/js/bootstrap.min.js"></script>
	<script src="{{base_url}}assets/js/bootstrap-wysihtml5.js"></script>
	<script>
		$('.textarea').wysihtml5();
	</script>
</body>
</html>
