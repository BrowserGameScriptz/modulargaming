<a href="/messages/create">Create a message</a>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Subject</th>
			<th>Sender</th>
		</tr>
	</thead>
	<tbody>
		{{#messages}}
			<tr>
				<td><a href="{{base_url}}messages/view/{{id}}">{{subject}}</a></td>
				<td><a href="{{base_url}}user/view/{{sender.id}}">{{sender.username}}</a></td>
			</tr>
		{{/messages}}
	</tbody>
</table>
