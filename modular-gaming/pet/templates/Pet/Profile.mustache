{{#pet}}
	<h2>{{name}} the {{colour.name}} {{specie.name}}</h2>
	<ul class="thumbnails">
		<li class="span4">
			<div class="thumbnail">
				<img src="{{base_url}}assets/img/pets/{{specie.id}}/{{colour.image}}"/>
			</div>
		</li>
		<li class="span2">
			<ul>
				<li>ID: {{id}}</li>
				<li>User: <a href={{user.href}}>{{user.username}}</a></li>
				<li>Name: {{name}}</li>
				<li>Gender: {{gender}}</li>
				<li>Specie: {{specie.name}}</li>
				<li>Colour: {{colour.name}}</li>
				<li>Hunger: {{hunger}}</li>
				<li>Happiness: {{happiness}}</li>
				<li>Created: {{created}}</li>
			</ul>
		</li>
	</ul>
{{/pet}}
