{
	"name": "modulargaming/modulargaming",
	"type": "project",
	"license": "BSD-3-Clause",
	"description": "Basic Modular Gaming application.",

	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/modulargaming/PHP-CS-Fixer"
		},
		{
			"type": "vcs",
			"url": "https://github.com/modulargaming/payment.git"
		},
		{
			"type": "vcs",
			"url": "https://github.com/modulargaming/installer.git"
		}
	],

	"require": {
		"php": ">=5.3.3",

		"modulargaming/core": "dev-master",
		"modulargaming/user": "dev-master"
	},

	"require-dev": {
		"phploc/phploc": "dev-master",
		"squizlabs/php_codesniffer": "dev-master",
		"fabpot/php-cs-fixer": "dev-master",

		"behat/behat": "2.4.*@stable",
		"behat/mink": "1.4@stable",
		"behat/mink-extension": "*",
		"behat/mink-goutte-driver": "*",
		"phpspec/phpspec2": "*"
	},

	"config": {
		"bin-dir": "bin/"
	},

	"autoload": {
		"psr-0": {
			"": "application/classes"
		}
	},

	"minimum-stability": "dev"
}