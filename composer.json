{
	"name": "modulargaming/modulargaming",
	"type": "project",
	"license": "BSD-3-Clause",
	"description": "Basic Modular Gaming application.",

	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/modulargaming/PHP-CS-Fixer"
		},
		{
			"type": "package",
			"package": {
				"name": "kohana-minion/tasks-migrations",
				"type": "kohana-module",
				"version": "3.3.0",
				"source": {
					"url": "https://github.com/kohana-minion/tasks-migrations.git",
					"type": "git",
					"reference": "3.3/develop"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "morgan/datatables",
				"type": "kohana-module",
				"version": "3.3.0",
				"source": {
					"url": "https://github.com/morgan/kohana-datatables.git",
					"type": "git",
					"reference": "3.3/master"
				}
			}
		}
	],

	"require": {
		"php": ">=5.3.3",

		"composer/installers": "*",

		"modulargaming/core": "dev-develop",
		"modulargaming/user": "dev-develop",
		"modulargaming/admin": "dev-develop",
		"modulargaming/forum": "dev-develop",
		"modulargaming/game": "dev-develop",
		"modulargaming/item": "dev-develop",
		"modulargaming/message": "dev-develop",
		"modulargaming/pet": "dev-develop",

		"modulargaming/theme-default": "dev-develop",
		"modulargaming/theme-admin": "dev-develop",

		"modulargaming/acl": "1.0.*",
		"modulargaming/assets": "1.0.*",
		"modulargaming/debug-toolbar": "1.0.0",
		"modulargaming/email": "1.0.0",
		"modulargaming/kostache": "1.0.0",
		"modulargaming/paginate": "1.0.0",
		"modulargaming/purifier": "1.0.0",

		"kohana/core": "3.3.1",
		"kohana/auth": "3.3.1",
		"kohana/cache": "3.3.1",
		"kohana/database": "3.3.1",
		"kohana/image": "3.3.1",
		"kohana/minion": "3.3.1",
		"kohana/orm": "3.3.1",
		"kohana/userguide": "3.3.1",

		"kohana-minion/tasks-migrations": "3.3.0",

		"morgan/datatables": "3.3.0"
	},

	"require-dev": {
		"phploc/phploc": "dev-master",
		"squizlabs/php_codesniffer": "dev-master",
		"fabpot/php-cs-fixer": "dev-master",

		"behat/behat": "2.4.*@stable",
		"behat/mink": "1.5.*@stable",
		"behat/mink-extension": "*",
		"behat/mink-goutte-driver": "*",
		"phpspec/phpspec2": "*"
	},

	"autoload": {
		"psr-0": {
			"": "application/classes"
		}
	},

	"minimum-stability": "dev",

	"extra": {
		"installer-paths": {
			"system/": ["kohana/core"]
		}
	}
}