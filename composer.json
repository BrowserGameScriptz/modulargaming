	"require": {
		"php": ">=5.3.3",

		"composer/installers": "*",

		"modulargaming/core": "dev-master",
		"modulargaming/user": "dev-master",
		"modulargaming/admin": "dev-master",
		"modulargaming/forum": "dev-master",
		"modulargaming/game": "dev-master",
		"modulargaming/item": "dev-master",
		"modulargaming/message": "dev-master",
		"modulargaming/pet": "dev-master",

		"modulargaming/acl": "1.0.*",
		"modulargaming/assets": "1.0.*",
		"modulargaming/debug-toolbar": "3.3.*@dev",
		"modulargaming/email": "dev-3.3/master",
		"modulargaming/kostache": "dev-master",
		"modulargaming/paginate": "dev-3.3/master",
		"modulargaming/purifier": "dev-3.3/master",

		"kohana/core": "3.3.*",
		"kohana/auth": "3.3.*",
		"kohana/cache": "3.3.*",
		"kohana/database": "3.3.*",
		"kohana/image": "3.3.*",
		"kohana/minion": "3.3.*",
		"kohana/orm": "3.3.*",
		"kohana/userguide": "3.3.*",

		"kohana-minion/tasks-migrations": "3.3.*",

		"morgan/datatables": "3.3.*"
	},

	"require-dev": {
		"phploc/phploc": "dev-master",
		"squizlabs/php_codesniffer": "dev-master",
		"fabpot/php-cs-fixer": "dev-master",

		"behat/behat": "2.4.*@stable",
		"behat/mink": "1.5.*@stable",
		"behat/mink-extension": "*",
		"behat/mink-goutte-driver": "*",
		"phpspec/phpspec2": "*"
	},

	"config": {
		"bin-dir": "bin/"
	},

	"autoload": {
		"psr-0": {
			"": "application/classes"
		}
	},

	"minimum-stability": "dev",

	"extra": {
		"installer-paths": {
			"system/": ["kohana/core"]
		}
	}
